<?xml version="1.0" encoding="UTF-8"?>
<suite name="Bank Guru" parallel="false" thread-count="3">
	<listeners>
		<listener class-name="org.uncommons.reportng.HTMLReporter" />
		<listener
			class-name="org.uncommons.reportng.JUnitXMLReporter" />
		<listener class-name="commons.ExtentReportListener" />
	</listeners>

	<test name="run on chrome">
		<parameter name="browser" value="chrome" />
		<parameter name="version" value="2.46" />
		<classes>
			<class
				name="com.bankguru.account.Account_Common_01_RegisterToSystem" />
			<class name="com.bankguru.payment.TestCasesPayment" />
		</classes>
	</test>

	<test name="run on firefox">
		<parameter name="browser" value="firefox" />
		<parameter name="version" value="0.24.0" />
		<classes>
			<class
				name="com.bankguru.account.Account_Common_01_RegisterToSystem" />
			<class name="com.bankguru.payment.TestCasesPayment" />
		</classes>
	</test>

	<test name="run on chrome headless">
		<parameter name="browser" value="chromeheadless" />
		<parameter name="version" value="2.46" />
		<classes>
			<class
				name="com.bankguru.account.Account_Common_01_RegisterToSystem" />
			<class name="com.bankguru.payment.TestCasesPayment" />
		</classes>
	</test>

	<test name="run on firefox headless">
		<parameter name="browser" value="firefoxheadless" />
		<parameter name="version" value="0.24.0" />
		<classes>
			<class
				name="com.bankguru.account.Account_Common_01_RegisterToSystem" />
			<class name="com.bankguru.payment.TestCasesPayment" />
		</classes>
	</test>

	<test name="run on ie">
		<parameter name="browser" value="ie" />
		<parameter name="version" value="3.141.59" />
		<classes>
			<class
				name="com.bankguru.account.Account_Common_01_RegisterToSystem" />
			<class name="com.bankguru.payment.TestCasesPayment" />
		</classes>
	</test>

	<test name="run on edge">
		<parameter name="browser" value="edge" />
		<parameter name="version" value="3.141.59.0" />
		<classes>
			<class
				name="com.bankguru.account.Account_Common_01_RegisterToSystem" />
			<class name="com.bankguru.payment.TestCasesPayment" />
		</classes>
	</test>

</suite> 
